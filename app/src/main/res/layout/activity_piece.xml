<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000"
    android:id="@+id/layoutPiece">

    <View
        android:id="@+id/plateBackground"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="#D2B48C"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bananaImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/banana4"
        android:elevation="9dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addBananaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_design"
        android:padding="14dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plateBackground"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@id/bananaImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bananaImage"/>

    <ImageView
        android:id="@+id/strawberryImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/straw1"
        android:elevation="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/bananaImage"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

