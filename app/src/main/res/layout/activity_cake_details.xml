<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/cake_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banana Cake"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#F5F5DC"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/banana_for_pager"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:contentDescription="Cake Image"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="20sp"
                android:textColor="#F5F5DC"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/ingredients_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/similar_cakes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similar Cakes"
                android:textSize="20sp"
                android:textColor="#F5F5DC"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_cakes_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Now"
        android:layout_margin="20dp"
        android:padding="12dp"
        android:backgroundTint="#F5F5DC"
        android:textColor="#800000"
        android:layout_gravity="bottom"/>
</FrameLayout>


