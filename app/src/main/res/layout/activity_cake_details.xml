<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/cake_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banana Cake"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#F5F5DC"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/banana_for_pager"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:contentDescription="Cake Image"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="20sp"
                android:textColor="#F5F5DC"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/ingredients_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/similar_cakes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similar Cakes"
                android:textSize="20sp"
                android:textColor="#F5F5DC"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_cakes_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                android:minHeight="200dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#660000">

        <Button
            android:id="@+id/order_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Now"
            android:padding="12dp"
            android:backgroundTint="#F5F5DC"
            android:textColor="#800000"/>

        <Button
            android:id="@+id/basket_inDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Basket"
            android:textColor="#800000"
            android:backgroundTint="#F5F5DC"
            android:contentDescription="Basket"
            android:tint="#800000"/>
    </LinearLayout>
</FrameLayout>



