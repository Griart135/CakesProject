<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#F5F5DC">

    <ImageView
        android:id="@+id/cake_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/cake_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Custom Cake"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#800000"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/order_height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Высота: 10 см"
                android:textSize="16sp"
                android:textColor="#800000"/>

            <SeekBar
                android:id="@+id/order_height_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="45"
                android:progress="10"
                android:thumbTint="#800000"
                android:progressTint="#800000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/order_radius_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Радиус: 20 см"
                android:textSize="16sp"
                android:textColor="#800000"/>

            <SeekBar
                android:id="@+id/order_radius_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="25"
                android:progress="20"
                android:thumbTint="#800000"
                android:progressTint="#800000"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Куски:"
            android:textSize="16sp"
            android:textColor="#800000"
            android:layout_marginEnd="10dp"/>

        <NumberPicker
            android:id="@+id/order_slices_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/order_slices_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:backgroundTint="#800000"
            android:textColor="#FFFFFF"
            android:padding="6dp"
            android:elevation="4dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/slices_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="#800000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ваш адрес"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#800000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/confirm_order_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:backgroundTint="#800000"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:backgroundTint="#800000"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

</LinearLayout>





