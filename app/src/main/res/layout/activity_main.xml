<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000"
    android:paddingTop="80dp">



    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:layout_marginTop="30dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cakePager"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintBottom_toTopOf="@+id/line3"
        android:layout_marginTop="20dp"/>


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginTop="100dp" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:layout_marginTop="50dp" />

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        android:layout_marginTop="30dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cakePager2"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        app:layout_constraintBottom_toTopOf="@+id/line6"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        android:layout_marginTop="100dp" />

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        android:layout_marginTop="250dp" />




    <ImageView
        android:id="@+id/cake"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Cakes"
        android:src="@drawable/cakeicon4"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/piece"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginBottom="16dp"/>


    <ImageView
        android:id="@+id/piece"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Custom"
        android:src="@drawable/piece4"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cake"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textCakes"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif"
        android:text="CAKES"
        android:textColor="#F5F5DC"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textOther"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif"
        android:text="OTHER"
        android:textColor="#F5F5DC"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintBottom_toTopOf="@id/line5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/filter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/filter4"
        app:layout_constraintTop_toBottomOf="@id/line6"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"
        android:clickable="true"
        android:focusable="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>



